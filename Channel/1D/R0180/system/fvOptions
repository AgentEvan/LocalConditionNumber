FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

momentumSource
{
    type            meanVelocityForce;
	activate		yes;

	meanVelocityForceCoeffs
	{
		selectionMode	all;

		fields			(U);
		Ubar            (1.0 0 0);
		// patch			INLET;
		relaxation      0.3;
	}
}

